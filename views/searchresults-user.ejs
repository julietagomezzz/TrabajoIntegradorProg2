<%- include('./partials/head.ejs')%>
<body>
	<!-- Header -->
	<% if (locals.usuario != undefined) { %>
		<%- include('./partials/headerLogueado') %>  
	<% } else{%>
		<%- include('./partials/header') %>  
	<% } %>
	<!-- /Header -->

	<!-- /Datos del usuario -->
	<% if (user.length > 0) { %> 
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < user.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/users/profile/<%= user[i].id %>">
							<figure class="product-box_image">
								<img src=<%= user[i].fotoDePerfil %> alt=<%= user[i].nombre %>>
							</figure>
							<article class="product-box_data">
								<h2><%= user[i].nombre %></h2>
								<p><%= user[i].email %></p>
								<p><%= user[i].dni %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
			
	<% } else{ %> 
		<div class="container products-wrapper">
			<div class="row">
		<div class="col-12">
			<h2 class="products-title">No hay resultados para su criterio de b√∫squeda</h2>
		</div>
		</div>						
	<% } %>

		</div>
	</div>

<!-- footer -->

<%- include('./partials/footer.ejs')%>

<!-- /footer -->

</body>
</html>