<%- include('./partials/head.ejs')%>
<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
			<%- include('./partials/headerLogueado.ejs') %>  
	<% } else{%>
			<%- include('./partials/header.ejs') %>  
	<% } %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src= "<%= data.fotoDePerfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= data.nombre %>
						<a href="/users/editprofile">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>Email: <%= data.email %></li>
						<br>
						<li>Productos: <%= data.usuario %></li> <!-- Hay que arreglar esto-->
						<li>200 seguidores</li>
						<li>Comentarios: <!-- <%= data.comentario %> Mirar esto tambiÃ©n--></li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for (let i = 0; i < data.length; i++) {  %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
				  		<a href="/products/detalle/id/<%= data[i].id %>"> 
					<figure class="product-box_image">
						<img src= '<%= data[i].cover %>' alt=<%= data[i].nombre%> >
					</figure>
					<article class="product-box_data">
						<h2> <%= data[i].nombre %> </h2>
						<p> <%= data[i].descripcion %> </p>
						<p> Comentarios:<%= data[i].comentarios %> </p>
					</article>
						</a>
					</section>
			  	</div>
			<% }  %>
	<!-- /Mis productos -->

	<!-- footer -->

	<%- include('./partials/footer.ejs')%>

	<!-- /footer -->
</body>	
</html>