<%- include('./partials/head.ejs')%>
<body>
	<!-- Header -->
	<% if (locals.username != undefined) { %>
		<%- include('./partials/headerLogueado.ejs') %>  
<% } else{%>
		<%- include('./partials/header.ejs') %>  
<% } %>
	<!-- /Header -->
	
	<!-- product detail -->
	
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"> <%= data.products[0].nombre %></h2> 
			<p class="product-detail-description">
				<a href="/products/add">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">

				<article class="col-12 col-lg-8 product-detail-info">
					<img src=<%= data.products[0].cover %> alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%= data.products[0].descripcion%> </p>
				</article>

				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for( let i = 0; i < comments.length; i++ ) { %>
							<article>
								<img src="<%= comments[i].cover %>" alt="">
								<div class="data">
									<p class="user">
									<strong> <a href="/users/profile"><%= comments[i].nombreusuario %> </a> </strong>
									<%= data.comments[i].texto %>
								</div>
							</article>
						
						<% } %>
					</section>
					<form class="form" action="/products/detalle" method="GET">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer.ejs')%>

	<!-- /footer -->

</body>	
</html>