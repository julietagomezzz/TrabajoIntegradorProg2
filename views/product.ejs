<%- include('./partials/head.ejs')%>
<body>
	<!-- Header -->
	<% if (locals.username != undefined) { %>
		<%- include('./partials/headerLogueado.ejs') %>  
	<% } else{%>
		<%- include('./partials/header.ejs') %>  
	<% } %>
	<!-- /Header -->
	
	<!-- product detail -->
	
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"> <%= data.nombre %></h2> <br>
			<p class="product-detail-description">
				<a href="/products/edit">Editar</a>
			</p>
			<form action="/product/borrar" method="post">
				<input name="id" type="text" value="<%= data.id %>" hidden>
				<button class="borrar" type="submit">
					Borrar <i class="fas fa-sign-in-alt"></i>
				</button>
			</form> 
			<h3> Publicado por : <%= data.usuario.nombre %></h3>
			<% if (locals.errors)  { %>
				<p style="color: rgb(0, 0, 0);"> <%= locals.errors.message %></p>
			<% } %>

		</div>
		<div class="product-detail">
			
			<div class="row">
					
				<article class="col-12 col-lg-8 product-detail-info">
					<img src=<%= data.cover %> alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%= data.descripcion%> </p>
				</article>

				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for( let i = 0; i < data.comentario.length; i++ ) { %>
							<article>
								<img src="<%= data.comentario[i].usuario.fotoDePerfil %>" alt="">
								<div class="data">
									<p class="user">
									<strong> <a href="/users/profile/<%= data.comentario[i].usuario.id %>"> <%= data.comentario[i].usuario.nombre %> </a> </strong>
									<%= data.comentario[i].comentarios %>
								</div>
							</article>
						
						<% } %>
					</section>
					<form class="form" action="" method="post">
						<input class="form-input" type="text" name="comentario" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->

	<%- include('./partials/footer.ejs')%>

	<!-- /footer -->

</body>	
</html>